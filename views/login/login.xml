<Page loaded="loaded">


    <ActionBar>
        <Label text="Iniciar sesión" width="100%" class="h2 text-center" />
    </ActionBar>
    <StackLayout >

        <GridLayout id="form-content" class="form-content" rows="auto,*,auto">

            <ScrollView row="1" class="fields-section">
                <StackLayout>

                    
                    <Label text="{{codigo}}"/>
                    <Button text="Escanear codigo QR" tap="scanBarcode" />
                    
                    <ActivityIndicator busy="{{busy}}" color="blue" width="100" height="100"></ActivityIndicator>


                </StackLayout>
            </ScrollView>
            <Button text="Iniciar sesión" class="update" tap="onSubmit" row="2" />

        </GridLayout>
    </StackLayout>
</Page>