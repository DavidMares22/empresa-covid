<Page loaded="loaded">
    

    <ActionBar>
<Label text="Registro" width="100%" class="h2 text-center" />
</ActionBar>
    <StackLayout >
      
            <GridLayout id="form-content" class="form-content" rows="auto,*,auto">
            
            <ScrollView row="1" class="fields-section">
                <StackLayout>
                    <!-- blur="onSubmit" -->
                    <GridLayout ios:columns="auto,*" android:rows="auto, auto" verticalAlignment="top">
                        <Label text="Correo" class="field-title" />
                        <TextField id="correo" text="{{ correo }}"  class="field" ios:col="1"  android:row="1" keyboardType="email"/>
                    </GridLayout>
                    <GridLayout ios:columns="auto,*" android:rows="auto, auto" verticalAlignment="top">
                        <Label text="Contraseña" class="field-title" />
                        <TextField id="contraseña" text="{{ con }}" secure="true" class="field" ios:col="1"  android:row="1" />
                    </GridLayout>
                    <GridLayout ios:columns="auto,*" android:rows="auto, auto" verticalAlignment="top">
                        <Label text="Repetir contraseña" class="field-title" />
                        <TextField id="repetircon" text="{{ repcon }}"  secure="true" class="field" ios:col="1"  android:row="1" />
                    </GridLayout>
                
                
                </StackLayout>
            </ScrollView>
            <Button text="Enviar" class="update" tap="onSubmit" row="2"/>
        </GridLayout>
    </StackLayout>
</Page>